EAPI=7

inherit multilib

DESCRIPTION="PUEL extensions for VirtualBox"
HOMEPAGE="https://www.virtualbox.org/"
SRC_URI="{{artifacts[0].src_uri}}"

LICENSE="PUEL"
SLOT="0"
KEYWORDS="*"
IUSE=""
RESTRICT="mirror strip"

RDEPEND="|| (
	~app-emulation/virtualbox-{{main_ver}}
	~app-emulation/virtualbox-bin-{{version}} )"

S="${WORKDIR}"

QA_PREBUILT="/usr/lib*/virtualbox/ExtensionPacks/Oracle_VM_VirtualBox_Extension_Pack/.*"

src_install() {
	insinto /usr/$(get_libdir)/virtualbox/ExtensionPacks/Oracle_VM_VirtualBox_Extension_Pack
	doins -r linux.${ARCH}
	doins ExtPack* PXE-Intel.rom
}
